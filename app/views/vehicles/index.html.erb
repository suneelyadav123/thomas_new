<div class="row">
  <div class="col-md-12 pl-0 pr-0">
    <div class="col-md-6 pl-0">
      <h1 class="pull-left">Manage Vehicles</h1>
    </div>
    <div class="col-md-6 mt-10">
      <%= link_to "New Vehicle", new_vehicle_path , class: "btn btn-primary pull-right" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% if @vehicles.count > 0 %>
      <table class="table table-bordered sortable">
        <thead>
          <th>Driver Name</th>
          <th> Driver Phone Number</th>
          <th> Vehicle Number </th>
          <th> Action </th>
        </thead>
        <tbody>
          <% @vehicles.each do |vehicle|%>
            <td><%= vehicle.driver_name %></td>
            <td><%= vehicle.driver_phone_num %></td>
            <td><%= vehicle.vehicle_num %></td>
            <td>
              <%= link_to "Edit", edit_vehicle_path(vehicle) %> | <%= link_to "Delete", '#',:id => vehicle.id, :class => 'delete text-danger',  "data-toggle" => "modal", 'data-target' => '#delete-vehicle', 'data-id' => vehicle.id %>
            </td>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-transform-none"> No Vehicles Currently created in this system.</h3>
        </div>
      </div>
    <% end %>  
  </div>
</div>
<div class="modal fade" id="delete-vehicle" data-backdrop="static" data-keyboard="false" role="dialog">
  <div class="modal-dialog modal-sm">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <button type="button" class="close custom-close-icon" data-dismiss="modal">Ã—</button>
        <h5 class="modal-title">Alert</h5>
      </div>
      <div class="modal-body">
        <i class="mdi mdi-alert fs-14"></i> Are you sure to delete this Vehicle?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-xs" data-dismiss="modal" id="deleteVehicle"> Ok </button>
        <button type="button" class="btn btn-cancel btn-xs" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
