<%= form_for(@vehicle, html: {class: "form"}) do |f| %>
  <div class="panel panel-default custom-select-box">
  <div class="panel-heading"><h3 class="panel-title text-transform-none">Details</h3></div>
    <div class="panel-body">
      <div class="row row-flex row-flex-wrap">
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>Driver Name</label>
            <%= f.text_field :driver_name, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>Driver Phone Number<span class="red_asterisk">*</span></label>
            <%= f.text_field :driver_phone_num, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>Vehicle Number<span class="red_asterisk">*</span></label>
            <%= f.text_field :vehicle_num, class: "form-control" %>
          </div>
        </div>
      
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>License Number<span class="red_asterisk">*</span></label>
            <%= f.text_field :license_num, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>Identity Proof <span class="red_asterisk">*</span></label>
            <%= f.select(:identity_proof, ["Aadhar Card", "Pan Card", "Driving License"], {}, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>Aadhar Number<span class="red_asterisk">*</span></label>
            <%= f.text_field :identity_num, class: "form-control"  %>
          </div>
        </div>
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>Address Line1<span class="red_asterisk">*</span></label>
            <%= f.text_field :address_line1, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>Address Line2<span class="red_asterisk">*</span></label>
            <%= f.text_field :address_line2, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>City<span class="red_asterisk">*</span></label>
            <%= f.text_field :city, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>State<span class="red_asterisk">*</span></label>
            <%= f.text_field :state, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4 flex-col">
          <div class="form-group">
            <label class='control-label'>Pin code<span class="red_asterisk">*</span></label>
            <%= f.text_field :pincode, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-12">
      <div class="actions pull-right">
        <%= f.submit "Save", :class=> "btn btn-primary" %>
        <%= link_to "Cancel", vehicles_path, :class => 'btn btn-cancel ml-5' %>
      </div>
    </div>
  </div>
<% end %>
