<div class="row">
  <div class="col-md-12">
    <h1>Import Orders</h1>
  </div>
</div>
<div class="csv-import-settings-preview">
  <%= form_tag import_orders_path, multipart: true, class: "form form-horizontal form-label-left" do %>
    <div class="well csv-well">
      <div class="row col-md-offset-2">
        <div class="form-group">
          <label class="control-label col-sm-4 col-md-4 col-xs-4"> Upload File:</label>
          <div class="col-md-8 col-sm-8 col-xs-8">
            <div class="input-group">
              <label class="upload-btn-wrapper">

                <span class="file-upload-btn btn ">Choose File  <%= file_field_tag :file, style: "display:none;" %>
                  <input type="file" name="data" id="data" />
                </span>
                
                <span class="pl-15" id="upload-file-text"></span>
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4 col-md-4 col-xs-4"></label>
          <div class="col-sm-8 col-md-8 col-xs-8">
            <%= submit_tag "Upload", :class=> "btn btn-primary w-180" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(document).ready(function() {
    $(document).on('change', ':file', function() {
      var input = $(this),
      label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
      $('#upload-file-text').html(label);
    });
  });
</script>
